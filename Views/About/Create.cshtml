@model IT_F18.Models.AboutViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create New About Me Content</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plaintext" class="control-label"></label>
                <input asp-for="Plaintext" class="form-control" />
                <span asp-validation-for="Plaintext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Admin" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
