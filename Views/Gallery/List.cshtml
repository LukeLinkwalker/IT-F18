@model IEnumerable<IT_F18.Models.GalleryViewModel>
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<table>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="thumbnail" src="~/images/uploads/@item.ImagePath" />
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }

</table>