<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT_F18</title>
    <environment include="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/site.css"/>
        <link rel="stylesheet" href="~/css/lightbox.min.css"/>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
        <script src="~/js/lightbox.min.js"></script>
    </environment>
</head>
<body>
        

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07" aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample07">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Gallery" asp-action="Index">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Newsletter" asp-action="Create">Newsletter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-md-0">
                    <img class="float-right" style="max-width: 120px" src="~/images/SDU_logo.png" alt="Sdu logo">
                </form>
            </div>
        </div>
    </nav>


        <div role="main" class="container-fluid" style="margin-top: 20px;">
            <div class="row">
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                    @RenderBody()
                </div>
            </div>
        </div>

        <footer>
            <p style="font-size: 14px;">This website is made as a mandatory assignment for the Internet Technology class at sdu.</p>
            <p style="font-size: 18px;">By: Mikkel Bjerg and Jonas Pedersen</p>
        </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
